<h1>Valorar <%= @recipe.name %></h1>

<%= form_with(model: rating) do |form| %>

  <div class="wrap-li">
      <div class="wrap-imagen-info">
          
          <div class="imagen-li">
              <%= image_tag @recipe.url_img %>
          </div>
          <div class="wrap-info">
              <div><%= @recipe.name %></div>
              <div><i class='fas fa-users'></i> <%= @recipe.people %></div>
              <div><i class='fas fa-clock'></i> <%= @recipe.duration %> min</div>
              <div><i class='fas fa-star'></i> <%= "%g" % ("%.2f" % rating_from_recipe(@recipe.id)) %></div>
              <div>
                  <% if is_recipe_saved?(current_user.id, @recipe.id) %>
                      <%= link_to unsave_recipe_path(:id_user => current_user.id, :id_recipe => @recipe.id) do %>
                          <i class='fas fa-minus'></i>
                      <% end %>
                  <% else %>
                      <%= link_to save_recipe_path(:id_user => current_user.id, :id_recipe => @recipe.id) do %>
                          <i class='fas fa-plus'></i>
                      <% end %>
                  <% end %>
              </div>
          </div>
      </div>
  </div>

  <div class="hidden">
    <%= form.label :user_id, style: "display: block"%>
    <%= form.text_field :user_id, value:current_user.id %>
  </div>

  <div class="hidden">
    <%= form.label :recipe_id, style: "display: block" %>
    <%= form.text_field :recipe_id, value:@recipe.id %>
  </div>

  <div class="centrar">
    <%= form.number_field :rating, min:0, max:5, value:0 %>
  </div>

  <div class="centrar">
    <%= form.submit value:"Valorar", :class => 'button'%>
  </div>
<% end %>
